{% for field in category.fields %}
<div class="form-group">
  <label for="{{field.fieldID}}" class="col-sm-3 control-label"></label>
  <div class="col-sm-7">
    <input type="{{field.inputType}}" name="{{field.fieldID}}" id="{{field.fieldID}}" placeholder="{{field.description}}" value="{{field.value || ""}}" class="form-control"/>
  </div>
</div>
{% endfor %}